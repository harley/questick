<!DOCTYPE html>
<html>
<head>
  <title>Questick</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body ng-app='myApp'>
  <% if flash.present? %>
    <%- flash.each do |name, msg| -%>
      <div class="alert <%= flash_alert_class(name) %>">
        <%= msg %>
        <div class="close" data-dismiss="alert">&times;</div>
      </div>
    <% end %>
  <% end %>

  <div class="navbar">
    <div class="container">
      <div class="navbar-header">
        <a href="/" class="navbar-brand">Questick</a>
      </div>
    </div>
  </div>
  <div class="container">
    <%= yield %>
  </div>
  <%= javascript_include_tag 'application', 'app/app', 'data-turbolinks-track' => true %>
</body>
</html>
