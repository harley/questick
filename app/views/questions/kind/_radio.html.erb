<div class="question-title">
  <span class="label label-default"><%= question.kind.humanize %></span>
  <%= question.title %>
</div>

<div class="question-choices">
  <% question.choices.each do |choice| %>
    <%= render_choice choice %>
  <% end %>
</div>

<div>
  <%= link_to "Add Choice", new_question_choice_path(question) %>
</div>
