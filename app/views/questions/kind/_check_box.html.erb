<div class="question-title">
  <%= render_question_title question %>
</div>
<div class="question-choices">
  <% question.choices.each do |choice| %>
    <%= render_choice choice %>
  <% end %>
</div>

<div>
  <%= link_to "Add Choice", new_question_choice_path(question), class: 'btn btn-sm' %>
</div>
