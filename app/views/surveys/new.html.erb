<div class="survey-container">
  <h1>New Survey</h1>

  <%= simple_form_for @survey, html: {class: ''} do |f| %>
    <%= f.input :title %>
    <%= f.input :passcode %>

    <div class="form-group">
      <%= f.submit 'Save', class: 'btn btn-default', data: {disable_with: 'Please wait...'} %>
    </div>
  <% end %>
</div>
