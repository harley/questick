<h1>
  <%= @survey.title %>
  <small>
    <%= link_to 'take', new_response_path(survey_id: @survey.id), class: 'label label-default' %>
  </small>
</h1>

<div class="questions">
  <% @survey.questions.each_with_index do |question, i| %>
    <div class="question">
      <%= render_question question %>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "Add Question", new_survey_question_path(@survey) %>
</div>
