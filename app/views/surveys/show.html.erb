<h1>
  <%= @survey.title %>
  <small>
    <div class="badge badge-info"><%= pluralize @survey.responses.size, 'response' %></div>
    <%= link_to 'Take', new_response_path(survey_id: @survey.id), class: 'btn btn-default btn-sm' %>
    <%= link_to "Export To CSV", survey_path(@survey, format: :csv), class: 'btn btn-default btn-sm' %>
    <%= link_to "View CSV as Text", survey_path(@survey, format: :txt), class: 'btn btn-default btn-sm' %>
  </small>
</h1>

<div class="questions">
  <% @survey.questions.each_with_index do |question, i| %>
    <div class="question">
      <%= render_question question %>
    </div>
  <% end %>
</div>

<div>
  <%= link_to "Add Question", new_survey_question_path(@survey) %>
</div>
